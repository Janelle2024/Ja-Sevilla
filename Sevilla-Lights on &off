  <script>
    function showLights() {
      document.getElementById('lights-section').style.display = 'block';
    }
    function turnOnLights() {
      const lightIcon = document.getElementById('light-icon');
      lightIcon.src = 'https://www.cleveland.com/resizer/gw4hDFjuuNVAXGmA00Dw6V3i6qo=/1280x0/smart/advancelocal-adapter-image-uploads.s3.amazonaws.com/image.cleveland.com/home/cleve-media/width2048/img/metro/photo/light-bulbjpg-0888a13970e13580.jpg'; // Placeholder for ON state
      lightIcon.alt = 'Light is ON';
    }
    function turnOffLights() {
      const lightIcon = document.getElementById('light-icon');
      lightIcon.src = 'https://img.freepik.com/premium-photo/classic-edison-light-bulb_93675-25510.jpg'; // Placeholder for OFF state
      lightIcon.alt = 'Light is OFF';
    }
  </script>
